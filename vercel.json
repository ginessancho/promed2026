{
  "buildCommand": "pnpm install && pnpm build",
  "outputDirectory": "dist/public",
  "functions": {
    "api/trpc/[trpc].ts": {
      "maxDuration": 10,
      "includeFiles": "server/**/*.ts,drizzle/**/*.ts,shared/**/*.ts"
    }
  },
  "rewrites": [
    {
      "source": "/api/trpc/:path*",
      "destination": "/api/trpc/:path*"
    },
    {
      "source": "/((?!api|assets|.*\\.).*)",
      "destination": "/index.html"
    }
  ]
}
