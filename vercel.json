{
  "buildCommand": "pnpm install && pnpm build",
  "outputDirectory": "dist/public",
  "functions": {
    "api/trpc/[trpc].js": {
      "runtime": "nodejs20.x",
      "maxDuration": 10,
      "memory": 256
    }
  },
  "rewrites": [
    {
      "source": "/api/trpc/:path*",
      "destination": "/api/trpc/[trpc].js"
    },
    {
      "source": "/((?!api|assets|.*\\.).*)",
      "destination": "/index.html"
    }
  ]
}
